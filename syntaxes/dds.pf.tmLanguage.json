{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "DDS.PF",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dds.pf",
					"match": "(((?i)^[\\s]{0,5}.))(\\*).*"
				}
			]
		},
		"constants": {
			"patterns": [
				{
                    "name": "constant.other.dds.pf",
                    "match": "[*][a-zA-Z][a-zA-Z0-9]*"
                },
				{
					"name": "constant.language.dds.pf.nametype",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{10}))(R|K)"
				},
				{
					"name": "constant.language.dds.pf.ref",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{22}))(R)"
				},
				{
					"name": "constant.language.dds.pf.len",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{23}))[0-9|\\s]{5}"
				},
				{
					"name": "constant.language.dds.pf.datatype",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{28}))(P|S|B|F|A|L|T|Z|H|J|E|O|G|5)"
				},
				{
					"name": "constant.language.dds.pf.decpos",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{29}))[0-9|\\s]{2}"
				},
				{
					"name": "constant.language.dds.pf.use",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{31}))B"
				},
                {
                    "name": "constant.numeric.dds.pf",
                    "match": "(\\b[0-9]+)|([0-9]*[.][0-9]*)"
                }
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.other.dds.pf.spec",
					"match": "(?i)(^[\\s]{5}A)"
				},
				{
					"name": "keyword.operator.dds.pf",
					"match": "\\+"
				},
				{
					"name": "keyword.other.dds.pf.funcs",
					"match": "(?i)(?<=((?<=^[\\s]{5}[A|\\s]).{38}))(ZONE|VARLEN|VALUES|UNSIGNED|UNIQUE|TIMSEP|TIMFMT|TEXT|REFSHIFT|REFFLD|REF|RANGE|NOALTSEQ|LIFO|FORMAT|FLTPCN|FIFO|FCFO|EDTCDE|EDTWRD|DIGIT|DFT|DESCEND|DATSEP|DATFMT|COMP|COLHDG|CMP|CHKMSGID|CHECK|CCSID|ALWNULL|ALTSEQ|ALIAS|ABSVAL)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.single.dds.pf",
			"begin": "'",
			"end": "(\n|')",
			"patterns": [
				{
					"name": "constant.character.escape.dds.pf",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.dds.pf"
}